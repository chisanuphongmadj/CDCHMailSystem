@page
@model CDCHMailSystem.Pages.User.ComposeModel
@{
    ViewData["Title"] = "Compose Mail";
}

<div class="container" style="max-width: 600px; margin-top: 50px;">
    <h2 class="text-center">Compose Mail</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="ToUsername" class="form-label">To Username</label>
            <input asp-for="ToUsername" class="form-control" />
            <span asp-validation-for="ToUsername" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Subject" class="form-label">Subject</label>
            <input asp-for="Subject" class="form-control" />
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Body" class="form-label">Body</label>
            <textarea asp-for="Body" class="form-control" rows="5"></textarea>
            <span asp-validation-for="Body" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Send</button>
        </div>
    </form>

    @* แสดงข้อความความสำเร็จหรือข้อผิดพลาด *@
    @if (Model.ErrorMessage != null)
    {
        <p class="text-danger text-center">@Model.ErrorMessage</p>
    }
    @if (Model.SuccessMessage != null)
    {
        <p class="text-success text-center">@Model.SuccessMessage</p>
    }
</div>
